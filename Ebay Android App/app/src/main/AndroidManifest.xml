<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.gyaneshm.ebay_product_search">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ebay_app.ebay_product_search.EbayProductSearchApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="ebay_app.ebay_product_search.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ebay_app.ebay_product_search.MainActivity" />

        <activity android:name="ebay_app.ebay_product_search.SearchResultActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ebay_app.ebay_product_search.MainActivity" />
        </activity>

        <activity android:name="ebay_app.ebay_product_search.ProductDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ebay_app.ebay_product_search.MainActivity" />
        </activity>
    </application>
</manifest>
